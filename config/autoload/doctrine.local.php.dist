        'connection' => array(
            // default connection name
            'orm_default' => array(
                'driverClass' => 'Doctrine\DBAL\Driver\PDOMySql\Driver',
                'params' => array(
                    'host'     => 'db',
                    'port'     => '3306',
                    'user'     => $data->MYSQL_USER,
                    'password' => $data->MYSQL_PASSWORD,
                    'dbname'   => $data->MYSQL_DATABASE,
                )
            )
        )
    ),
);
